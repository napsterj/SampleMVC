@model HashSet<CustomersRequest>

<div class="container py-5">
    <h1>List of existing customers</h1>
</div>

<div class="container py-5">
    <div class="row">
        <table class="table table-dark table-responsive table-borderless text-center">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Date of Birth</th>
                    <th>Profile Picture</th>
                </tr>
            </thead>            
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var customer in Model)
                    {
                        <tr class="text-secondary">
                            <td>@customer.Id</td>
                            <td>@customer.FirstName</td>
                            <td>@customer.LastName</td>
                            <td>@customer.Email</td>
                            <td>@customer.Phone</td>
                            <td>@customer.DateOfBirth</td>
                            <td><img src="@customer.UploadedPhotoUrl" height="200" class="img-fluid" /></td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td class="bg-white text-center text-info">* No Customers Found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
